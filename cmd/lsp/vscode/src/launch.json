{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run MindScript Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/cmd/lsp/vscode"
      ],
      "outFiles": [
        "${workspaceFolder}/cmd/lsp/vscode/dist/**/*.js"
      ],
      "preLaunchTask": "npm: compile (mindscript-vscode)"
    }
  ]
}
