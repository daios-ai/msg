{
  "name": "mindscript-vscode",
  "displayName": "MindScript",
  "publisher": "yourname",
  "version": "0.0.1",
  "description": "MindScript language support (LSP client)",
  "engines": { "vscode": "^1.85.0" },
  "categories": ["Programming Languages"],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:mindscript",
    "onCommand:mindscript.startServer"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mindscript",
        "aliases": ["MindScript"],
        "extensions": [".ms"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mindscript",
        "scopeName": "source.mindscript",
        "path": "./syntaxes/syntaxes/mindscript.tmLanguage.json"
      }
    ],
    "commands": [
      { "command": "mindscript.startServer", "title": "MindScript: Start Server" }
    ],
    "configuration": {
      "type": "object",
      "title": "MindScript",
      "properties": {
        "mindscript.serverPath": {
          "type": "string",
          "default": "bin/msg-lsp",
          "markdownDescription": "Relative path (inside the extension folder) to the MindScript LSP server binary. If not found, the extension falls back to `msg-lsp` on your system PATH."
        }
      }
    },
    "configurationDefaults": {
      "[mindscript]": {
        "editor.semanticTokenColorCustomizations": {
          "enabled": true,
          "rules": {
            "bracket:b0": { "foreground": "#C792EA" },
            "bracket:b1": { "foreground": "#82AAFF" },
            "bracket:b2": { "foreground": "#89DDFF" },
            "bracket:b3": { "foreground": "#ADDB67" },
            "bracket:b4": { "foreground": "#FFD700" },
            "bracket:b5": { "foreground": "#F78C6C" }
          }
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "vscode:prepublish": "npm run compile"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.0"
  }
}
