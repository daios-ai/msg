{
  "name": "mindscript-vscode",
  "displayName": "MindScript",
  "publisher": "Pedro A. Ortega",
  "version": "0.0.1",
  "description": "MindScript language support (LSP client)",
  "engines": { "vscode": "^1.85.0" },
  "categories": ["Programming Languages"],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:mindscript",
    "onCommand:mindscript.startServer"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mindscript",
        "aliases": ["MindScript"],
        "extensions": [".ms"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mindscript",
        "scopeName": "source.mindscript",
        "path": "./syntaxes/mindscript.tmLanguage.json"
      }
    ],
    "commands": [
      { "command": "mindscript.startServer", "title": "MindScript: Start Server" }
    ],
    "configuration": {
      "type": "object",
      "title": "MindScript",
      "properties": {
        "mindscript.serverPath": {
          "type": "string",
          "default": "bin/msg-lsp",
          "markdownDescription": "Relative path (inside the extension folder) to the MindScript LSP server binary. If not found, the extension falls back to `msg-lsp` on your system PATH."
        }
      }
    },
    "configurationDefaults": {
      "editor.semanticHighlighting.enabled": true,
      "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "rules": {
          "bracket.b0": {"foreground": "#ffd62c" },
          "bracket.b1": {"foreground": "#e072d4" },
          "bracket.b2": {"foreground": "#009ed8" },
          "bracket.b3": { "foreground": "#ffd62c" },
          "bracket.b4": { "foreground": "#e072d4" },
          "bracket.b5": { "foreground": "#009ed8" }
        }
      }
    },
    "semanticTokenTypes": [
      { "id": "bracket", "description": "Rainbow-colored block delimiters" }
    ],
    "semanticTokenModifiers": [
      { "id": "b0" }, { "id": "b1" }, { "id": "b2" },
      { "id": "b3" }, { "id": "b4" }, { "id": "b5" }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "vscode:prepublish": "npm run compile"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.0"
  }
}


